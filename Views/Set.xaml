<Window x:Class="ProcessManager.Set"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProcessManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="设置">

    <Grid Margin="10,20,0,0" >
        <StackPanel>
            <CheckBox Content="开机自动启动" FontSize="20"></CheckBox>
            <CheckBox Content="后台运行" FontSize="20"></CheckBox>
            <CheckBox Content="启用悬浮球" FontSize="20"></CheckBox>
            <Grid Height="20"></Grid>
            <TextBlock  Text=" 消息通知类型" FontSize="20" HorizontalAlignment="Left"/>
            <CheckBox Content="消息框"  FontSize="20"></CheckBox>
            <CheckBox Content="程序闪烁"  FontSize="20"></CheckBox>
            <Grid Height="20"></Grid>
            <Button Content="导出csv文件" Height="40" FontSize="20" HorizontalAlignment="Left"></Button>
            <Grid Height="20"></Grid>
            <Button Content="清除缓存" Height="40" FontSize="20" HorizontalAlignment="Left"></Button>
            <Grid Height="50"></Grid>
            <WrapPanel HorizontalAlignment="Right">
            <Button Content="确认" Height="40" FontSize="20" HorizontalAlignment="Right"></Button>
                <Grid Width="10"></Grid>
            <Button Content="取消" Height="40" FontSize="20" HorizontalAlignment="Right"></Button>
                <Grid Width="10"></Grid>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
