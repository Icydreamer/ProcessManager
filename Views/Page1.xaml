<Page x:Class="ProcessManager.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MvvmTutorials.ToolkitMessages.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Page.DataContext>
        <local:MainWindowViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding PageSource}"></TextBlock>
            <Button Content="点击" Command="{Binding ButtonClickCommand}"/>
        </StackPanel>
    </Grid>
</Page>
